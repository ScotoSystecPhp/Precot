{
  // Global format on save
  "editor.formatOnSave": true,

  // Set Prettier as the default formatter for HTML, CSS, JS
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Enable format on save for specific languages
  "[html]": {
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[php]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Sophisticode.php-formatter"
  },

  // Optional: Enable Prettier for JSON files
  "json.format.enable": true
}
